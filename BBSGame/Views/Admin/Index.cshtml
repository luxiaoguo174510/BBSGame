
@{
    Layout = null;
}
@using ModelInfo
@model List<GameType>
<input type="button" class="btn btn-info" value="添加" onclick="location.href='/Admin/Add'" />
<input type="button" class="btn btn-info" value="评论信息" onclick="location.href='/Admin/CommIndex'" />
<input type="button" class="btn btn-info" value="帖子信息" onclick="location.href='/Admin/IndexPost'" />
<input type="button" class="btn btn-info" value="板块信息" onclick="location.href='/Admin/PlateIndex'" />
<input type="button" class="btn btn-info" value="用户信息" onclick="location.href='/Admin/UserShow'" />
<input type="button" class="btn btn-info" value="返回论坛" onclick="location.href='/HomePage/Index'" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <td>类别编号</td>
        <td>类别名称</td>
        <td>类别状态</td>
        <td>操作</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GId</td>
            <td>@item.GName</td>
            <td>@item.GState</td>
            <td>
                @Html.ActionLink("删除", "Delete", new { @GId = item.GId }, new { @onclick = "return confirm ('确认删除?')" })
                @Html.ActionLink("修改", "Upt", new { @id = item.GId })
            </td>
        </tr>

    }
</table>